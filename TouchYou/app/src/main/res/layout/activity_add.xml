<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chawakorn.enjoystick.AddActivity">


    <Button
        android:text="LEFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftBtn"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="50dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <Button
        android:text="^"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upBtn"
        android:fontFamily="sans-serif-medium"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        tools:layout_conversion_absoluteX="141dp"
        tools:layout_conversion_absoluteY="85dp"
        tools:layout_conversion_absoluteWidth="88dp"
        tools:layout_conversion_absoluteHeight="62dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="136dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downBtn"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        tools:layout_conversion_absoluteX="141dp"
        tools:layout_conversion_absoluteY="147dp"
        tools:layout_conversion_absoluteWidth="88dp"
        tools:layout_conversion_absoluteHeight="62dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/upBtn"
        android:layout_marginStart="136dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="RIGHT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rightBtn"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        tools:layout_conversion_absoluteX="229dp"
        tools:layout_conversion_absoluteY="147dp"
        tools:layout_conversion_absoluteWidth="131dp"
        tools:layout_conversion_absoluteHeight="62dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/leftBtn"
        android:layout_marginStart="232dp" />


    <Button
        android:text="KEYBOARD"
        android:layout_width="137dp"
        android:id="@+id/customBtn"
        android:layout_height="190dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.84" />

</android.support.constraint.ConstraintLayout>
